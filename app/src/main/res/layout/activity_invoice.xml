<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Invoice">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="10dp"
                app:cardCornerRadius="3dp">

                <RelativeLayout
                    android:id="@+id/RL1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">


                <ImageView
                android:id="@+id/vegimage1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/veg"
                    android:visibility="gone"/>


            <TextView
                android:id="@+id/qp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/vegimage1"
                android:textColor="@color/black"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/p1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pizza1"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/qp1"
                android:textSize="15dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/priceP1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:visibility="gone"/>


                    <ImageView
                android:id="@+id/vegimage2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/p1"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/veg"
                        android:visibility="gone"/>


            <TextView
                android:id="@+id/qp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qp1"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/vegimage2"
                android:textColor="@color/black"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pizza2"
                android:layout_toRightOf="@id/qp2"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/p1"
                android:textSize="15dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/priceP2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/priceP1"
                android:textColor="@color/black"
                android:visibility="gone"/>


            <ImageView
                android:id="@+id/vegimage3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/p2"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/veg"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/qd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qp2"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/vegimage3"
                android:textColor="@color/black"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/d1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donut1"
                android:layout_toRightOf="@id/qd1"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/p2"
                android:textSize="15dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/priceD1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/priceP2"
                android:textColor="@color/black"
                android:visibility="gone"/>



            <ImageView
                android:id="@+id/vegimage4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/d1"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/veg"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/qd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qd1"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/vegimage4"
                android:textColor="@color/black"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/d2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donut2"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/qd2"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/d1"
                android:textSize="15dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/priceD2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/priceD1"
                android:textColor="@color/black"
                android:visibility="gone"/>


            <ImageView
                android:id="@+id/vegimage5"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/d2"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/veg"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/qs1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qd2"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/vegimage5"
                android:textColor="@color/black"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/s1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sandwitch1"
                android:layout_toRightOf="@id/qs1"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/d2"
                android:textSize="15dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/priceS1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/priceD2"
                android:textColor="@color/black"
                android:visibility="gone"/>


            <ImageView
                android:id="@+id/vegimage6"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/s1"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/veg"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/qs2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qs1"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/vegimage6"
                android:textColor="@color/black"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/s2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sandwitch2"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/qs2"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/s1"
                android:textSize="15dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/priceS2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/priceS1"
                android:textColor="@color/black"
                android:visibility="gone"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/Order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place Order"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>


</ScrollView>

</RelativeLayout>


