            <RelativeLayout
                android:id="@+id/RL2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RL1"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">


                    <TextView
                        android:id="@+id/BillHead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bill Details"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ItemTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item Total"
                        android:textSize="13dp"
                        android:layout_below="@id/BillHead"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/ItemAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/BillHead"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/DeliveryFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery fee"
                        android:layout_below="@id/ItemTotal"
                        android:textColor="@color/black"
                        android:textSize="13dp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/DeliveryAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ItemTotal"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/DeliveryAmount"
                        android:layout_marginTop="15dp"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:id="@+id/Pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To Pay"
                        android:textSize="15dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_below="@id/divider2"/>

                    <TextView
                        android:id="@+id/PayAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/divider2"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"/>

                    <View
                        android:id="@+id/divider3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/PayAmount"
                        android:layout_marginTop="15dp"
                        android:background="?android:attr/listDivider" />


            </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true">

                <View
                    android:id="@+id/anchor1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerInParent="true"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/Order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/anchor1"
            android:backgroundTint="@color/purple_200">


                <TextView
                    android:id="@+id/PlaceOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLACE ORDER"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>
        </RelativeLayout>

