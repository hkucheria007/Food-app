<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Invoice">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/p1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pizza1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/qp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pizza2"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@+id/p1"
                android:layout_marginTop="10sp"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/qp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/qp1"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/d1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donut1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@+id/p2"
                android:layout_marginTop="10sp"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/qd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/qp2"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/d2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donut2"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@+id/d1"
                android:layout_marginTop="10sp"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/qd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/qd1"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/s1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sandwich1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@+id/d2"
                android:layout_marginTop="10sp"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/qs1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/qd2"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/s2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sandwich2"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@+id/s1"
                android:layout_marginTop="10sp"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/qs2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/qs1"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/Order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place Order"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>


    </ScrollView>





</RelativeLayout>